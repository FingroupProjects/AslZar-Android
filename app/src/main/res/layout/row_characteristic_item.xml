<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/weight"
            style="@style/forTextView2.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="Вес:"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_weight"
            style="@style/forTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text=""
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/weight"
            card_view:layout_constraintStart_toEndOf="@+id/weight"
            card_view:layout_constraintTop_toTopOf="@+id/weight" />

        <TextView
            android:id="@+id/size"
            style="@style/forTextView2.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Размер:"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="@+id/weight"
            card_view:layout_constraintTop_toBottomOf="@+id/weight" />

        <TextView
            android:id="@+id/tv_size"
            style="@style/forTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text=""
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/size"
            card_view:layout_constraintStart_toEndOf="@+id/size"
            card_view:layout_constraintTop_toTopOf="@+id/size" />

        <TextView
            android:id="@+id/price"
            style="@style/forTextView2.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Цена от:"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/weight"
            card_view:layout_constraintTop_toBottomOf="@+id/size" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/forTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:text=""
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/price"
            card_view:layout_constraintStart_toEndOf="@+id/price"
            card_view:layout_constraintTop_toTopOf="@+id/price" />


        <TextView
            android:id="@+id/tv_other_filial"
            style="@style/forTextView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_circle"
            android:paddingStart="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>