<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp"
    android:background="@drawable/shape_bottom_sheet_background"
    tools:context=".ui.dialogs.ScannerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/horizontalProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/background_2"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/close"
            style="?attr/floatingActionButtonSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:contentDescription="Close barcode scanner"
            android:src="@drawable/ic_clear_2"
            app:backgroundTint="@color/background_2"
            app:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/errorTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9"
            app:tint="@color/background_5" />

        <View
            android:id="@+id/view9"
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_for_btn"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Поиск товара"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <TextView
            android:id="@+id/errorTextView"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавление товара"
            android:textColor="@color/not_available"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <View
            android:id="@+id/view91"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="6dp"
            android:background="@color/background_2"
            android:elevation="3dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressLinearDeterminate2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="1dp"
            android:elevation="3dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="0"
            android:visibility="invisible"
            app:indicatorColor="@color/background_2"
            app:layout_constraintBottom_toTopOf="@+id/scanner_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close"
            app:trackColor="@color/background_4" />

        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="0dp"
            android:layout_height="520dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view91">

        </com.budiyev.android.codescanner.CodeScannerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


