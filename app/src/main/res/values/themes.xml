<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AslZar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary_color_1</item>
        <item name="colorPrimaryVariant">@color/primary_color_2</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/primary_color_1</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="alertDialogTheme">@style/DialogFragmentTheme</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="fontFamily">@font/palanquin</item>

        <item name="chipStyle">@style/Widget.App.Chip</item>

    </style>

    <style name="forTextView">
        <item name="android:textColor">@color/text_color_1</item>
    </style>

    <style name="forTextView2">
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <style name="forTextView.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="forTextView.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="forTextView.14">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">2.5dp</item>
    </style>

    <style name="forTextView.16">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="forTextView.18">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="forTextView2.10">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="forTextView2.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="forTextView2.14">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">2.5dp</item>
    </style>

    <style name="forTextView2.16">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="forTextView2.18">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="DialogFragmentTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:alertDialogStyle">@style/DialogFragmentStyle</item>
        <item name="dialogCornerRadius">15dp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/shape_dialog_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/shape_bottom_sheet_background</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipIconTint">@color/background_3</item>
        <item name="chipBackgroundColor">@color/background_view_1</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/stroke_tint</item>
    </style>

    <style name="Theme.AslZar" parent="Base.Theme.AslZar" />

    //for TabLayout
    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>