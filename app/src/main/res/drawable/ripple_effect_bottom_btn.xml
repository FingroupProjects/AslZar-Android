<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/background_2"> <!-- Ripple color :: WHITE -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/border_color_2"/>
            <corners android:bottomRightRadius="18dp"/>
        </shape>
    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="18dp"/>
            <solid android:color="@color/background_2" />
        </shape>
    </item>
</ripple>